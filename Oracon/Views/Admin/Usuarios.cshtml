@{
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
    ViewData["Title"] = "Usuarios";
    var usuarios = (List<Usuario>)Model;
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Usuarios - @ViewBag.Nombre</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/admin/">Dashboard</a></li>
        <li class="breadcrumb-item active">@ViewBag.Nombre</li>
    </ol>
    <div class="card mb-4">
        <div class="card-body">
            Usuarios con rol de @ViewBag.Nombre.
        </div>
    </div>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Tabla de @ViewBag.Nombre
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th></th>
                        <th>Nombres y Apellidos</th>
                        <th>Celular</th>
                        <th>Correo</th>
                        <th>Usuario</th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th></th>
                        <th>Nombres y Apellidos</th>
                        <th>Celular</th>
                        <th>Correo</th>
                        <th>Usuario</th>
                        <th></th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in usuarios)
                    {
                        <tr>
                            <td><img width="25" src="@item.Imagen" alt=""></td>
                            <td>@item.Nombres @item.Apellidos</td>
                            <td>@item.Celular</td>
                            <td>@item.Correo</td>
                            <td>@item.Username</td>
                            <td class="float-right">
                                <a class="btn btn-success btn-sm" href="/admin/EditarUsuario?idUser=@item.Id"><i class="fas fa-edit"></i></a>
                                <a class="btn btn-danger btn-sm" href="/admin/EliminarUsuario?idUser=@item.Id"><i class="fas fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
