@{
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
    ViewData["Title"] = "Cursos";
    var cursos = (List<Curso>)Model;
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Cursos - @ViewBag.Nombre</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/admin/">Dashboard</a></li>
        <li class="breadcrumb-item active">@ViewBag.Nombre</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Tabla @ViewBag.Nombre
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th></th>
                        <th>Nombre</th>
                        <th>Estado</th>
                        <th>Precio</th>
                        <th>Docente</th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th></th>
                        <th>Nombre</th>
                        <th>Estado</th>
                        <th>Precio</th>
                        <th>Docente</th>
                        <th></th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in cursos)
                    {
                        <tr>
                            <td><img width="25" src="@item.Imagen" alt=""></td>
                            <td>@item.Nombre</td>
                            <td>@item.Estado</td>
                            <td>@item.Precio</td>
                            <td>@item.Docente.Nombres @item.Docente.Apellidos</td>
                            <td class="float-right">
                                <a class="btn btn-success btn-sm" href="/admin/EditarCurso?idCurso=@item.Id"><i class="fas fa-edit"></i></a>
                                <a class="btn btn-danger btn-sm" onclick="Eliminar(@item.Id ,'curso')"><i class="fas fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
