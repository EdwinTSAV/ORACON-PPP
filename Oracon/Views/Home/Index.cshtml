@{
    Layout = null;
    var docentes = (List<Usuario>)ViewBag.Docentes;
    var cursos = (List<Curso>)ViewBag.Cursos;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Oracon</title>
    
    <link rel="shortcut icon" href="/project/icono.jpg">
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/site.css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/glider-js@1.7.3/glider.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.3/normalize.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Open+Sans&family=Oswald:wght@500&family=PT+Sans&display=swap">
</head>

<body class="index">
    <header class="site-header">
        <div class="hero">
            <div class="contenido-header">
                <nav class="redes-sociales">
                    <a href="https://www.facebook.com/AsesoriaEmpresarialOracon"><i class="fa fa-facebook"></i></a>
                    <a href="https://twitter.com/"><i class="fa fa-twitter"></i></a>
                    <a href="https://www.youtube.com/channel/UCg9BYxEe8ft9H7IOspIhccw"><i class="fa fa-youtube-play"></i></a>
                    <a href="https://pe.linkedin.com/company/asesoriaoracon"><i class="fa fa-linkedin" aria-hidden="true"></i></a>
                    <a href="https://www.instagram.com/"><i class="fa fa-instagram"></i></a>
                </nav>
                <div class="informacion-pagina">
                    <div class="clearfix">
                        <p class="fecha"><i class="fa fa-calendar" aria-hidden="true"></i> 15-Oct-2020</p> <!-- cambiar -->
                        <p class="ciudad"><i class="fa fa-map-marker" aria-hidden="true"></i> Cajamarca, PERÚ</p> <!-- cambiar -->
                    </div>
                    <div class="gold">
                        <h1 class="nombre-sitio">AÑADIR DESCRIPCION - ORACON</h1>
                        @*<h1 class="nombre-sitio"><img src="~/project/logo.png" alt="LOGO ORACON" width="600" /></h1>*@
                        <p class="slogan">Somos el mejor estudio contable de Cajamarca @*TODO*@</p>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="barra">
        <div class="contenedor clearfix">
            <div class="logo clearfix">
                <a href="/"><img src="~/project/logo.png" alt="ORACON" /></a>
            </div>
            <div class="menu-movil">
                <span></span>
                <span></span>
                <span></span>
                <span></span>
                @if (User.Identity.IsAuthenticated)
                {
                    <span></span>
                }
            </div>
            <nav class="navegacion-principal clearfix">
                <a href="/Curso/Cursos?idCategoria=0">CURSOS</a>
                <a href="/Curso/Docentes">DOCENTES</a>
                <a class="nav-link" data-bs-toggle="dropdown" aria-expanded="false" href="#">CATEGORIA</a>
                <ul class="dropdown-menu ">
                    @foreach (var item in ViewBag.Categorias)
                    {
                        <li><a class="dropdown-item" href="/Curso/Cursos?idCategoria=@item.Id">@item.Nombre</a></li>
                    }
                </ul>
                @if (!User.Identity.IsAuthenticated)
                {
                    <a href="/user/login">LOGIN</a>
                }
                @if (User.Identity.IsAuthenticated)
                {
                    <a href="/ajustes/"><i class="fa fa-user-o" aria-hidden="true"></i></a>
                    <a href="/user/Logout"><i class="fa fa-power-off" aria-hidden="true"></i></a>
                }
            </nav>
        </div>
    </div>

    <section class="seccion contenedor">
        <h2>Bienvenido a la escuela de negocios de ORACON</h2>
        <p>
            Oracon ha desarrollado una escuela de negocios para nuestros clientes, donde podrás aprender las últimas tendencias de administración de empresas, cursos prácticos como: Marketing Digital, Planeamiento Estratégico, Liderazgo, Brandig entre otros.
        </p>
    </section>


    <section class="programa">
        <div class="contenedor-video">
            <video autoplay loop poster="~/project/bg-talleres.jpg">
                <source src="~/video/video.mp4" type="video/mp4">
                <source src="~/video/video.webm" type="video/webm">
                <source src="~/video/video.ogv" type="video/ogv">
            </video>
        </div>
        <div class="contenido-programa">
            <div class="contenedor">
                <div class="programa-evento">
                    <h2>Cursos mas populares</h2>

                    <nav class="menu-programa">
                        @foreach (var item in ViewBag.Categorias)
                        {
                            <a href="#@item.Nombre"><i class="fa fa-book" aria-hidden="true"></i><br />@item.Nombre</a>
                        }
                    </nav>

                    <div id="administracion" class="info-curso ocultar clearfix">
                        <div class="detalle-evento">
                            <h3>Como ser freelancer</h3>
                            <p><i class="fa fa-clock-o" aria-hidden="true"></i> 10:00</p>
                            <p><i class="fa fa-money" aria-hidden="true"></i> 150</p>
                            <p><i class="fa fa-user" aria-hidden="true"></i> Susan Sanchez</p>
                        </div>
                        <div class="detalle-evento">
                            <h3>Como ser freelancer</h3>
                            <p><i class="fa fa-clock-o" aria-hidden="true"></i> 10:00</p>
                            <p><i class="fa fa-money" aria-hidden="true"></i> 150</p>
                            <p><i class="fa fa-user" aria-hidden="true"></i> Susan Sanchez</p>
                        </div>
                        <a href="/Curso/Cursos?idCategoria=1" class="button float-right">Ver mas</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="contenedor seccion">
        <h2>Aprende con nuestros docentes</h2>
        <div class="glider-contain">
            <div class="glider">
                @foreach (var item in docentes)
                {
                    <div class="glider-item">
                        <a class="invitado-info" href="#invitado1">
                            <img src="@item.Imagen" alt="@item.Nombres @item.Apellidos">
                            <p>@item.Nombres</p>
                        </a>
                    </div>
                }
                <div class="glider-item">
                    <a class="invitado-info" href="#invitado1">
                        <img src="~/FilesBD/1.jpg" alt="Docente1">
                        <p>Rafael  Bautista</p>
                    </a>
                </div>
                <div class="glider-item">
                    <a class="invitado-info" href="#invitado2">
                        <img src="~/FilesBD/2.jpg" alt="Docente2">
                        <p>Shari Herrera</p>
                    </a>
                </div>
                <div class="glider-item">
                    <a class="invitado-info" href="#invitado3">
                        <img src="~/FilesBD/chicolac2010.jpg" alt="Docente3">
                        <p>Suan Sanchez</p>
                    </a>
                </div>
            </div>
            <button class="glider-prev" aria-label="anterior">
                <i class="fa fa-chevron-left" aria-hidden="true"></i>
            </button>
            <button class="glider-next" aria-label="siguiente">
                <i class="fa fa-chevron-right" aria-hidden="true"></i>
            </button>
        </div>
    </section>

    <div class="contador parallax">
        <div class="contenedor">
            <ul class="resumen-evento clearfix">
                <li><p class="numero">@docentes.Count</p>Docentes</li>
                <li><p class="numero">@cursos.Count</p>Cursos Totales</li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li><p class="numero">10</p>Cursos Inscritos</li>
                    <li><p class="numero">2</p>Cursos Completados</li>
                }
                else
                {
                    <li><p class="numero">0</p>Cursos Inscritos</li>
                    <li><p class="numero">0</p>Cursos Completados</li>
                }
            </ul>
        </div>
    </div>

    <footer>
        Oracon SRL © Todos los derechos reservados.
        <a href="home/privacy">Privacy Policy</a>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/glider-js@1.7.3/glider.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
    <script src="~/js/site.js"></script>
</body>
</html>