@{
    ViewData["Title"] = "Carrito";
    var cursos = (List<CursoUsuario>)Model;
    string docente;
}

<section class="seccion">
    <h2>Mi cesta</h2>
    <ul class="lista-precios clearfix">
        @foreach (var item in cursos)
        {
            <li>
                <div class="tabla-precio">
                    <div>
                        @if (item.Cursos.Nombre.Length > 23)
                        {
                            <h3>@item.Cursos.Nombre.Substring(0, 22) ...</h3>
                        }
                        else
                        {
                            <h3>@item.Cursos.Nombre</h3>
                        }
                    </div>
                    <a href="/Curso/Detalle?idCurso=@item.Cursos.Id">
                        <img alt="@item.Cursos.Nombre" src="@item.Cursos.Imagen">
                    </a>
                    <ul>
                        <li>
                            <i class="fa fa-user" aria-hidden="true"></i>
                            @{docente = item.Cursos.Docente.Nombres + " " + item.Cursos.Docente.Apellidos;}
                            @if (docente.Length > 23)
                            {
                                <span>@docente.Substring(0, 22) ...</span>
                            }
                            else
                            {
                                @docente
                            }
                        </li>
                        <li><i class="fa fa-book" aria-hidden="true"></i> @item.Cursos.Categoria.Nombre</li>
                        @if (item.Cursos.Precio > 0)
                        {
                            <li>S/ @item.Cursos.Precio</li>
                        }
                        else
                        {
                            <li>Gratuito</li>
                        }
                        @if (item.Cursos.Estado)
                        {
                            <li><i class="fa fa-check-circle" aria-hidden="true"></i> Concluido</li>
                        }
                        else
                        {
                            <li><i class="fa fa-hourglass-end" aria-hidden="true"></i> En progreso</li>
                        }
                    </ul>
                </div>
            </li>
        }
    </ul>
</section>

